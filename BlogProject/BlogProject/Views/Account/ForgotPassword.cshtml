@model BlogProject.Models.Users
@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>ForgotPassword</h2>
<div class="col-md-6">
    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post))
    {
        <label>Enter your email or nickname.</label>
        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", required = "required" })<br />
        <button class="form-control btn btn-primary" type="submit">Create Password</button>

    }
    <br /><br />
    <div class="alert alert-@ViewBag.Status" role="alert">@ViewBag.Warning</div>
</div>